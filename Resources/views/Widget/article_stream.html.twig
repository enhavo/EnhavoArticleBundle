<div class="block">
    <div class="block-article-stream">
        <div class="title">Articles</div>
        {% for article in articles %}
            <article>
                <div class="article-thumb"><img src="{{ media_url(article.picture) }}"></div>
                <div class="article-content">
                    <div class="article-date">{{ article.publicationDate|date('d.m.y') }}</div>
                    <div class="article-title">{{ article.title }}</div>
                    <div class="article-teaser">{{ article.teaser|raw }}</div>
                    <a href="{{ router(article) }}" class="btn">Read more</a>
                </div>
            </article>
        {% endfor %}

        <ul class="pagination">
            <li class="prev"><a href="">Prev</a></li>
            <li class="active"><a href="">1</a></li>
            <li><a href="">2</a></li>
            <li><a href="">3</a></li>
            <li><a href="">4</a></li>
            <li><a href="">5</a></li>
            <li class="next"><a href="">Next</a></li>
        </ul>

    </div>
</div>